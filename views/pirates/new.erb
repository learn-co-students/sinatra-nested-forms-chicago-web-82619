<h1>Create a New Pirate</h1>

<form action="/pirates" method="post">

 Pirate name: <input type="text" name="pirate[name]" id="pirate[name]">
  
  Height <input type="text" name="pirate[height]">
  Weight <input type="text" name="pirate[weight]">
  
  Ship 1: <input id="ship_name_1" type="text" name="pirate[ships][][name]" placeholder="ship 1 name">
  <input id="ship_type_1" type="text" name="pirate[ships][][type]" placeholder="ship 1 type">
  <input id="ship_booty_1" type="text" name="pirate[ships][][booty]" placeholder="ship 1 booty">
  
  Ship 2: <input id="ship_name_2" type="text" name="pirate[ships][][name]" placeholder="ship 2 name">
  <input id="ship_type_2" type="text" name="pirate[ships][][type]" placeholder="ship 2 type">
  <input id="ship_booty_2" type="text" name="pirate[ships][][booty]" placeholder="ship 2 booty">
  
  <button type="Submit" id="Submit"> submit </button>

</form>


